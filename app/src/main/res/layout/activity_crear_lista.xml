<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearListaActivity">

    <!-- 游댳 Fondo -->
    <ImageView
        android:id="@+id/fondoImagen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fondo"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Capa oscura -->
    <View
        android:id="@+id/capaOscura"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 T칤tulo -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCRIBE TU TAREA"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Campo: T칤tulo -->
    <EditText
        android:id="@+id/txtTarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/backgroundlogin"
        android:hint="T칤tulo"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Campo: Descripci칩n -->
    <EditText
        android:id="@+id/txtDescripcio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgroundlogin"
        android:hint="Descripci칩n"
        android:minLines="3"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/txtTarea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Etiqueta: Importancia -->
    <TextView
        android:id="@+id/lblImportancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importancia:"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtDescripcio"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 游댳 Spinner con borde -->
    <Spinner
        android:id="@+id/spPrioridades"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/backgroundlogin"
        android:spinnerMode="dropdown"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/lblImportancia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Etiqueta: Dificultad -->
    <TextView
        android:id="@+id/lblDificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dificultad:"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spPrioridades"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 游댳 Grupo de RadioButtons -->
    <RadioGroup
        android:id="@+id/groupDificultad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lblDificultad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rFacil"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundlogin"
            android:buttonTint="#FFFFFF"
            android:padding="8dp"
            android:text="F치cil"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/rMedia"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundlogin"
            android:buttonTint="#FFFFFF"
            android:padding="8dp"
            android:text="Media"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/rDificil"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundlogin"
            android:buttonTint="#FFFFFF"
            android:padding="8dp"
            android:text="Dif칤cil"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <!-- 游댳 Bot칩n A침adir -->
    <Button
        android:id="@+id/btnA침adir"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="A침adir"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/groupDificultad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Bot칩n Salir -->
    <Button
        android:id="@+id/btnSalir"
        android:layout_width="106dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#D32F2F"
        android:text="Volver"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnA침adir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
